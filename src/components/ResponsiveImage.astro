---
import { getImage } from "astro:assets";

const { imgMobile, imgDesktop, alt } = Astro.props;

const mobileImg = await getImage({
    src: imgMobile,
    format: 'webp',
    width: 375,
    height: 451,
});

const desktopImg = await getImage({
    src: imgDesktop,
    format: 'webp',
    width: 540,
    height: 650,
})
---

<picture>
    <source media="(max-width: 767px)" srcset={mobileImg.src} />
    <source media="(min-width: 768px)" srcset={desktopImg.src} />
    <img src={desktopImg.src} alt={alt} class="w-full h-full object-cover" >
</picture>