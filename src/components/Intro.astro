
---
import ResponsiveImage from './ResponsiveImage.astro'
import introMobile from '../images/image-intro-mobile.jpg'
import introDesktop from '../images/image-intro-desktop.jpg'
import leftMobilePattern from '../images/bg-pattern-intro-left-mobile.svg'
import leftDesktopPattern from '../images/bg-pattern-intro-left-desktop.svg'
import rightMobilePattern from '../images/bg-pattern-intro-right-mobile.svg'
import rightDesktopPattern from '../images/bg-pattern-intro-right-desktop.svg'
---
<section class="bg-accent md:relative">
    <div class=" flex flex-col md:flex-row lg:max-w-[1110px] md:gap-[30px] md:mx-auto md:px-6 ">
        <div class="w-full md:w-[540px] md:h-[650px] md:order-2 md:relative md:top-[105px]">
            <ResponsiveImage imgMobile={introMobile} imgDesktop={introDesktop} alt=""/>
        </div>
        <div class="relative md:static py-[93px] md:pt-[105px] md:pb-[127px] px-6 md:px-0 text-white flex flex-col items-center md:order-1 md:items-start">
            <div class="hidden md:block w-[150px] h-[1px] bg-white mb-[63px]"></div>
            <h1 class="text-[3rem] md:text-[4.5rem] leading-[3rem] md:leading-[4rem] tracking-[-0.667px] md:tracking-[-1px] md:max-w-[530px] mb-4 text-center md:text-start font-dm-serif">Humanizing your insurance.</h1>
            <p class="text-center md:text-start text-base leading-[1.625rem] mb-8 md:mb-6 md:max-w-[545px]">Get your life insurance coverage easier and faster. We blend our expertise and technology to help you find the plan thatâ€™s right for you. Ensure you and your loved ones are protected.</p>
            <a href="#" class="uppercase text-[0.813rem] font-bold tracking-[1.5px] border-[1.5px] border-white hover:bg-white focus:bg-white hover:text-primary focus:text-primary outline-white transition-all duration-500 pt-[13px] pb-3 px-[28.5px]">View Plans</a>

            <div class="absolute w-[168px] h-[165px] md:w-[195px] md:h-[504px] top-0 md:top-auto left-0 md:bottom-[-265px]">
                <ResponsiveImage imgMobile={leftMobilePattern} imgDesktop={leftDesktopPattern}/>
            </div>

            <div class="absolute w-[124px] h-[330px] md:w-[436px] md:h-[593px] bottom-[-165px] right-0 md:bottom-auto md:top-0">
                <ResponsiveImage imgMobile={rightMobilePattern} imgDesktop={rightDesktopPattern}/>
            </div>
        </div>
    </div>
    
</section>

  