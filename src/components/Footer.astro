---
import { Image } from "astro:assets";
import logo from '../images/logo.svg';
import { socialLinks, footerLinks } from '../util/links'
---

<footer class="bg-[#FAFAFA] py-[88px] px-6 bg-footer-mobile md:bg-footer-desktop bg-no-repeat bg-left-top">
    <div class="flex flex-col md:flex-row md:justify-between md:max-w-[1110px] md:mx-auto items-center gap-8">
        <Image src={logo} alt='Site Logo'/>
        <div class="flex items-center gap-4">
            {
                socialLinks.map(item => (
                   <a href={item.link} aria-label={`Go to ${item.name}`} >
                        <Image src={item.imgSrc} alt='' class='hover:scale-[1.2] transition-all duration-300'/>
                    </a>
                ))
            }
        </div>
    </div>

    <div class="max-w-[327px] md:max-w-[1110px] h-[1px] bg-[#DADADA] my-10 md:mt-[33px] md:mb-12 mx-auto"></div>

    <div class="flex flex-col md:flex-row items-center md:items-start gap-10 md:max-w-[1110px] md:mx-auto md:gap-[100px] lg:gap-[170px]">
        {footerLinks.map(item => (
            <div class="text-center md:text-start text-[0.813rem] font-bold tracking-[1.5px]">
                <h4 class="text-secondary  mb-[36px]">{item.title}</h4>
                <div class="flex flex-col gap-4">
                    {item.links.map(link => (
                        <a class="text-primary hover:underline focus:underline outline-none" href={link.link}>{link.label}</a>
                    ))}
                </div>
            </div>
        ))}
    </div>
    
</footer>